<p id="notice"><%= notice %></p>

<p>
  <b>First name:</b>
  <%= @contact.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @contact.last_name %>
</p>

<p>
  <b>Phone:</b>
  <%= @contact.phone %>
</p>

<p>
  <b>Addresses:</b>
  <ul>
  	<% @contact.addresses.each do |address|%>
  	<li> 
      <%= address.street  %> 
      <%= link_to 'Edit', edit_contact_address_path(@contact, address) %>
      <%= link_to 'Destroy', contact_address_path(@contact, address), method: :delete, data: { confirm: 'Are you sure?' } %>
      
      
    </li>
  <% end %>
  </ul>
  
</p>

